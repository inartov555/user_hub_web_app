# Core DRF & Django errors
msgid "Unknown error."
msgstr "Невідома помилка."

msgid "Not authenticated."
msgstr "Не автентифіковано."

msgid "Authentication credentials were not provided."
msgstr "Облікові дані автентифікації не надано."

msgid "You do not have permission to perform this action."
msgstr "У вас немає дозволу виконувати цю дію."

msgid "Not found."
msgstr "Не знайдено."

msgid "A server error occurred."
msgstr "Сталася помилка сервера."

msgid "Invalid input."
msgstr "Недійсні вхідні дані."

msgid "Malformed request."
msgstr "Некоректний запит."

msgid "Unsupported media type."
msgstr "Непідтримуваний тип медіа."

msgid "Not acceptable."
msgstr "Неприйнятно."

msgid "Request was throttled."
msgstr "Перевищено ліміт запитів."

msgid "Method \"%(method)s\" not allowed."
msgstr "Метод \"%(method)s\" не дозволено."

# Your custom messages (examples already present)
msgid "ids must be a list of integers"
msgstr "\"ids\" має бути списком цілих чисел"

msgid "Cannot delete current user."
msgstr "Неможливо видалити поточного користувача."

msgid "Passwords do not match."
msgstr "Паролі не збігаються."

# SimpleJWT / auth-ish
msgid "Invalid token."
msgstr "Недійсний токен."

msgid "Token is invalid or expired"
msgstr "Токен недійсний або прострочений"

msgid "Given token not valid for any token type"
msgstr "Наданий токен не дійсний для жодного типу токенів"

msgid "User is inactive"
msgstr "Користувач неактивний"

msgid "No active account found with the given credentials"
msgstr "Активного облікового запису з наданими обліковими даними не знайдено"

msgid "No refresh token provided"
msgstr "Токен оновлення не надано"

msgid "Session expired due to server restart."
msgstr "Сеанс завершено через перезапуск сервера."

msgid "Invalid refresh token."
msgstr "Недійсний токен оновлення."

msgid "Failed to blacklist token."
msgstr "Не вдалося додати токен до чорного списку."

msgid "Database error while applying changes."
msgstr "Помилка бази даних під час застосування змін."

msgid "Password updated."
msgstr "Пароль оновлено."

msgid "No file provided"
msgstr "Файл не надано"

msgid "Must include 'login' (or 'email'/'username') and 'password'."
msgstr "Потрібно вказати 'login' (або 'email'/'username') та 'password'."

msgid "Email required"
msgstr "Потрібна адреса електронної пошти"

msgid "user_id claim missing"
msgstr "Відсутній атрибут 'user_id'"

msgid "Session expired due to inactivity."
msgstr "Сеанс завершено через неактивність."

msgid "This password is too short. It must contain at least 8 characters."
msgstr "Цей пароль надто короткий. Він має містити щонайменше 8 символів."

msgid "The password is too similar to the %(verbose_name)s."
msgstr "Пароль надто схожий на ім’я %(verbose_name)s."

msgid "This password is too common."
msgstr "Цей пароль є надто поширеним."

msgid "Enter a valid email address."
msgstr "Введіть дійсну адресу електронної пошти."
